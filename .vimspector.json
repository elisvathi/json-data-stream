{
  "$schema": "https://puremourning.github.io/vimspector/schema/vimspector.schema.json",
  "configurations": {
    "run": {
      "adapter": "vscode-node",
      "configuration": {
        "type": "node",
        "request": "launch",
        "name": "Jest Current File",
        "program": "${workspaceFolder}/node_modules/.bin/jest",
        "args": [
          "${fileBasenameNoExtension}"
        ],
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}"
      }
    }
  }
}
