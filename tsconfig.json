{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "sourceMap": true,
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "outDir": "./lib"
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "./tests/*.ts",
    "./tests/**/*.ts"
  ]
}
